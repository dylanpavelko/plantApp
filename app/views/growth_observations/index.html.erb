<p id="notice"><%= notice %></p>

<h1>Growth Observations</h1>

<table>
  <thead>
    <tr>
      <th>Plant instance</th>
      <th>Observation date</th>
      <th>Bbch stage</th>
      <th>Percent at stage</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @growth_observations.each do |growth_observation| %>
      <tr>
        <td><%= growth_observation.plant_instance %></td>
        <td><%= growth_observation.observation_date %></td>
        <td><%= growth_observation.bbch_stage %></td>
        <td><%= growth_observation.percent_at_stage %></td>
        <td><%= link_to 'Show', growth_observation %></td>
        <td><%= link_to 'Edit', edit_growth_observation_path(growth_observation) %></td>
        <td><%= link_to 'Destroy', growth_observation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

