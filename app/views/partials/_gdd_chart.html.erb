<div>
	<canvas id="gdd_chart"></canvas>
	    <script src="https://cdn.jsdelivr.net/npm/chart.js@2.8.0"></script>
	    <script>
	      var ctx = document.getElementById('gdd_chart').getContext('2d');
	      var chart = new Chart(ctx, {
	          // The type of chart we want to create
	          type: 'bar',

	          // The data for our dataset
	          data: {
	              labels: <%= raw @date_labels.to_s %>,
	              datasets: [{
	                  label: 'Avg Max Temperature (F)',
	                  borderColor: 'rgba(255, 0, 0, .7)',
	                  backgroundColor: 'rgba(255, 0, 0, .7)',
	                  fill: false,
	                  data: <%= @max_temp_data.inspect %>,
	                  type: 'line'
	              },
	              {
	                  label: 'Avg Min Temperature (F)',
	                  borderColor: 'rgba(0, 0, 255, 1)',
	                  backgroundColor: 'rgba(0, 0, 255, 1)',
	                  fill: false,
	                  data: <%= @min_temp_data.inspect %>,
	                  type: 'line'
	              },
	              {
	                  label: 'Max Likely Temperature (F)',
	                  borderColor: 'rgba(255, 0, 0, .3)',
	                  backgroundColor: 'rgba(255, 0, 0, .3)',
	                  fill: false,
	                  data: <%= @max_deviation_data.inspect %>,
	                  type: 'line'
	              },
	              {
	                  label: 'Min Likely Temperature (F)',
	                  borderColor: 'rgba(0, 0, 255, .3)',
	                  backgroundColor: 'rgba(0, 0, 255, .3)',
	                  //borderDash: [5, 5],
	                  fill: false,
	                  data: <%= @min_deviation_data.inspect %>,
	                  type: 'line'
	              },
	              {
	                  label: 'Accumulated GDD',
	                  borderColor: 'rgba(49, 145, 17, .3)',
	                  backgroundColor: 'rgba(49, 145, 17, 1)',
	                  fill: false,
	                  yAxisID: 'B',
	                  data: <%= @ytd_gdd_data.inspect %>,
	                  type: 'line'
	              }]
	          },

	          // Configuration options go here
	          options: {
	            scales: {
	              yAxes: [{
	                id: 'A',
	                type: 'linear',
	                position: 'left',
	              }, {
	                id: 'B',
	                type: 'linear',
	                position: 'right',
	              }]
	            }
	          }
	      });
	    </script>
</div>